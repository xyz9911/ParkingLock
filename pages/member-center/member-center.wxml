<view class="addressEdit" wx:if="{{addressEdit}}">
	<van-field
    value="{{ addressData.linkMan }}"
    label="用户姓名"
    placeholder="填写收件人姓名"
		clearable
    bind:change="linkManChange"
  />
	<van-field
    value="{{ addressData.mobile }}"
    label="手机号码"
    placeholder="11位手机号码"
		type="number"
		clearable
    bind:change="mobileChange"
  />
	<picker mode="multiSelector" range="{{pickerRegionRange}}" range-key="name" value="{{pickerSelect}}" bindchange="bindchange" bindcolumnchange="bindcolumnchange">
		<van-field
			value="{{ showRegionStr }}"
			label="选择地区"
			readonly
			is-link
		/>
	</picker>
	<van-field
    value="{{ addressData.address }}"
    label="详细地址"
    placeholder="街道、楼栋、门牌等"
		type="textarea"
		autosize
		clearable
    bind:change="addressChange"
  />
	<button class="save-btn" bindtap="bindSave">保存</button>
	<button class="cancel-btn" bindtap="editCancel">取消</button>
</view>