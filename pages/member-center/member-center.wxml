<view class="addressEdit">
	<van-field
    value="{{ userInfo.userName }}"
    label="用户姓名"
    placeholder="填写用户姓名"
		clearable
    bind:change="usernameChange"
  />
	<van-field
    value="{{ userInfo.mobile }}"
    label="手机号码"
    placeholder="11位手机号码"
		type="number"
		clearable
    bind:change="mobileChange"
  />
	<!-- <picker mode="multiSelector" range="{{pickerRegionRange}}" range-key="name" value="{{pickerSelect}}" bindchange="bindchange" bindcolumnchange="bindcolumnchange">
		<van-field
			value="{{ showRegionStr }}"
			label="选择地区"
			readonly
			is-link
		/>
	</picker> -->
	<van-field
    value="{{ userInfo.address }}"
    label="详细地址"
    placeholder="街道、楼栋、门牌等"
		type="textarea"
		autosize
		clearable
    bind:change="addressChange"
  />
	<button class="save-btn" bindtap="bindSave">保存</button>
	<button class="cancel-btn" bindtap="editCancel">取消</button>
</view>